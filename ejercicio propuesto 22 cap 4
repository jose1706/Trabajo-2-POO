import java.util.Scanner;
public class ejercicio_22{
    public static void main(String[] args) {
      String nombre;
      float salario, horas;
      Scanner entrada = new Scanner(System.in);
      System.out.println("Ingrese el nombre del trabajador: ");
      nombre = entrada.next();
      System.out.println("Ingrese el salario por hora del trabajador: ");
      salario = entrada.nextFloat();
      System.out.println("Ingrese la cantidad de horas mensuales realizadas por el trabajador: ");
      horas = entrada.nextFloat();
      if (salario * horas > 450000) {
          System.out.println("El salario mensual de " + nombre + " es de " + salario * horas);
      }
    }  
}
